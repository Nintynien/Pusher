<Window x:Class="Pusher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="413" Width="393" 
        ResizeMode="NoResize" 
        MouseDown="Window_MouseDown" 
        BorderThickness="0" 
        Margin="0" 
        Background="Transparent" 
        WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      GlassFrameThickness="0,0,0,1"
                      ResizeBorderThickness="0"/>
    </WindowChrome.WindowChrome>
    <Canvas HorizontalAlignment="Left" Height="413" VerticalAlignment="Top" Width="393" Background="White">
        <Rectangle x:Name="Header" Fill="#FF4AB367" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="343"/>
        <Rectangle x:Name="CloseBackground" Fill="#FF4AB367" Height="50" Canvas.Left="343" Width="50" VerticalAlignment="Top" MouseEnter="CloseBackground_MouseEnter" MouseLeave="CloseBackground_MouseLeave" MouseUp="CloseBackground_MouseUp" MouseDown="CloseBackground_MouseDown"/>
        <Image x:Name="CloseImage" Height="50" Canvas.Left="343" Width="50"/>
    </Canvas>
</Window>
